@model LibraryManager.Models.Catalog.AssetIndexModel

<div id="assets">
    <h3>library Catalog</h3>
    <div id="assetsTable">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Title</th>
                    <th>Author / Director</th>
                    <th>Dewey Call Number</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var asset in Model.Assets)
                {
                <tr>
                    <td class="text-left">
                        <a asp-controller="Catalog" asp-action="Detail" asp-route-id="@asset.Id">
                            <img src="@asset.ImageUrl" alt="Alternate Text" class="imageCell"/>
                        </a>
                    </td>
                    <td class="text-left">@asset.AuthorOrDirector</td>
                    <td class="">@asset.DeweyCallNumber</td>
                    <td class="">@asset.Title</td>
                </tr>

                }
            </tbody>
        </table>
    </div>
</div>